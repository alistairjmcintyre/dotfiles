;-----------------------------------------------------------------------------;
[module/date-icon]
type = custom/text
content = 
inherit = module/icon
;-----------------------------------------------------------------------------;
[module/date]
type = internal/date
interval = 5
date = %A, %d %B %Y
date-alt = " %Y-%m-%d"
time = %I:%M %P
time-alt = %H:%M:%S
format-prefix = 
format-prefix-foreground = ${colors.text-alt}
label = "It is %time% on %date%"
label-font = 1
label-background = ${colors.bar-bg}
label-foreground = ${colors.text}
label-padding = 1
;-----------------------------------------------------------------------------;
[module/network-icon]
type = custom/text
content = 
inherit = module/icon
;-----------------------------------------------------------------------------;
[module/network]
type = internal/network
interface = enp0s31f6

; Seconds to sleep between updates
; Default: 1
interval = 1

; Consider an `UNKNOWN` interface state as up.
; Some devices like USB network adapters have 
; an unknown state, even when they're running
; Default: false
unknown-as-up = true

label-font = 1

label-connected = %local_ip%
label-connected-foreground = ${colors.text}
label-connected-background = ${colors.bar-bg}
label-connected-padding = 1

label-disconnected = Disconnected
label-disconnected-foreground = ${colors.text}
label-disconnected-background = ${colors.bar-bg}
label-disconnected-padding = 1
;-----------------------------------------------------------------------------;
[module/wifi-icon]
type = custom/text
content = 
inherit = module/icon
;-----------------------------------------------------------------------------;
[module/wifi]
type = internal/network
interface = wlp4s0

; Seconds to sleep between updates
; Default: 1
interval = 1

; Consider an `UNKNOWN` interface state as up.
; Some devices like USB network adapters have 
; an unknown state, even when they're running
; Default: false
unknown-as-up = true

label-font = 1

label-connected = %local_ip%
label-connected-foreground = ${colors.text}
label-connected-background = ${colors.bar-bg}
label-connected-padding = 1

label-disconnected = Disconnected
label-disconnected-foreground = ${colors.text}
label-disconnected-background = ${colors.bar-bg}
label-disconnected-padding = 1
;-----------------------------------------------------------------------------;
